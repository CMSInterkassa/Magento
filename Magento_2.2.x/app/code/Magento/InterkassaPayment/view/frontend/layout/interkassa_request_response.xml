<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Interkassa payment</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
             <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Interkassa payment</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\InterkassaPayment\Block\Response" name="interkassapayment_request_response" template="Magento_InterkassaPayment::response.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>